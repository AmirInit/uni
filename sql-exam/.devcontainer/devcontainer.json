{
    "name": "SQL Server Exam (Simple)",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspaces/sql-exam",
    "runArgs": [
        "--userns=keep-id",
        "--security-opt=label=disable"
    ],
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-mssql.mssql",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-mssql"
            ],
            "settings": {
                "mssql.connections": [
                    {
                        "server": "db",
                        "database": "master",
                        "user": "sa",
                        "password": "ExamPassword!123",
                        "authenticationType": "SqlLogin",
                        "profileName": "Exam DB"
                    }
                ]
            }
        }
    },
    "postCreateCommand": "apt-get update && apt-get install -y git iputils-ping"
}